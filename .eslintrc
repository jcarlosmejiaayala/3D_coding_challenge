{
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module",
      "ecmaFeatures": {
        "defaultParams": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "semi": ["error", "never"],
      "linebreak-style": 0,
      "no-console": 0,
      "curly": "error",
      "comma-dangle": 0,
      "prettier/prettier": ["error", {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none"
      }],
      "arrow-body-style": [2, "as-needed"],
      "class-methods-use-this": 0,
      "import/imports-first": 0,
      "import/newline-after-import": 0,
      "import/no-dynamic-require": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": 0,
      "import/no-webpack-loader-syntax": 0,
      "import/prefer-default-export": 0,
      "indent": [
        2,
        2,
        {
          "SwitchCase": 1
        }
      ],
      "max-len": 0,
      "newline-per-chained-call": 0,
      "no-confusing-arrow": 0,
      "no-use-before-define": 0,
      "prefer-template": 2,
      "require-yield": 0
    }
  }